{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Archivos list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Archivoid</th>
                <th>Nombre</th>
                <th>Url</th>
                <th>Descripcion</th>
                <th>Vigente</th>
                <th>Eliminado</th>
                <th>Fecha</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('archivos_hows', { 'id': entity.archivoid }) }}">{{ entity.archivoid }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.url }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.vigente }}</td>
                <td>{{ entity.eliminado }}</td>
                <td>{% if entity.fecha %}{{ entity.fecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('archivos_show', { 'id': entity.archivoid }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('archivos_edit', { 'id': entity.archivoid }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('archivos_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
